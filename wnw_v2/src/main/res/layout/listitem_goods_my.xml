<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutFather"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layoutTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp">

        <FrameLayout
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:background="@drawable/bg_white_border"
            android:padding="0.5dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/logo_default_square" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="name"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_9" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtPrize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="￥266.3"
                    android:textColor="@color/red_price"
                    android:textSize="@dimen/textsize_9" />

                <TextView
                    android:id="@+id/txtOldPrize"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="￥520"
                    android:textColor="@color/grey_text"
                    android:textSize="@dimen/textsize_7" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtHasSell"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已售500" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" | " />

                <TextView
                    android:id="@+id/txtBalance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="库存10" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/txtDelete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/bg_white_border_grey_radius_2dp"
            android:drawableLeft="@drawable/icon_delete_small"
            android:gravity="center"
            android:padding="5dp"
            android:singleLine="true"
            android:text="删除"
            android:textColor="@color/grey_text"
            android:textSize="@dimen/textsize_6" />

        <TextView
            android:id="@+id/txtEdit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/bg_white_border_grey_radius_2dp"
            android:drawableLeft="@drawable/icon_edit_small"
            android:gravity="center"
            android:padding="5dp"
            android:singleLine="true"
            android:text="编辑"
            android:textColor="@color/grey_text"
            android:textSize="@dimen/textsize_6" />

        <TextView
            android:id="@+id/txtSetGroup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/bg_white_border_grey_radius_2dp"
            android:gravity="center"
            android:padding="5dp"
            android:singleLine="true"
            android:text="设为团购"
            android:textColor="@color/grey_text"
            android:textSize="@dimen/textsize_6" />

        <TextView
            android:id="@+id/txtSetFlashSale"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/bg_white_border_grey_radius_2dp"
            android:gravity="center"
            android:padding="5dp"
            android:singleLine="true"
            android:text="设为抢购"
            android:textColor="@color/grey_text"
            android:textSize="@dimen/textsize_6" />

        <TextView
            android:id="@+id/txtSetPreSell"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/bg_white_border_grey_radius_2dp"
            android:gravity="center"
            android:padding="5dp"
            android:singleLine="true"
            android:text="设为预售"
            android:textColor="@color/grey_text"
            android:textSize="@dimen/textsize_6" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey_line" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/background" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey_line" />
</LinearLayout>