<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/father"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layoutHeader"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2">

                <ImageView
                    android:id="@+id/imageQuitActivity"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_click_textview"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:src="@drawable/image_quit" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center">

                <TextView
                    android:id="@+id/txtTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Title"
                    android:textColor="@color/black_light"
                    android:textSize="@dimen/textsize_10" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="right|center_vertical">

                <ImageView
                    android:id="@+id/imageShare"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_click_textview"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:src="@drawable/icon_share" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorPrimaryLight" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.hemaapp.wnw.view.MyRefreshLoadmoreLayout
            android:id="@+id/refreshLoadmoreLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <xtom.frame.view.XtomListView
                android:id="@+id/listView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:divider="@null"
                android:overScrollMode="never" />
        </com.hemaapp.wnw.view.MyRefreshLoadmoreLayout>

        <ImageView
            android:id="@+id/imageToTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/icon_to_top"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/imageGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/imageToTop"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/icon_group"
            android:visibility="invisible" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageChat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_click_layout"
            android:scaleType="center"
            android:src="@drawable/icon_chat" />

        <View
            android:id="@+id/line1"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/grey_line" />

        <LinearLayout
            android:id="@+id/layoutShopCar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_click_layout"
            android:gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/icon_shopcar" />

                <FrameLayout
                    android:id="@+id/layoutCartCount"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="right"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/bg_layout_cart_count_circle"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/txtCartCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="9+"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textsize_5" />
                </FrameLayout>
            </FrameLayout>
        </LinearLayout>

        <View
            android:id="@+id/line2"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/grey_line" />

        <TextView
            android:id="@+id/txtAddCar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_click_layout"
            android:gravity="center"
            android:text="@string/add_shop_car"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/textsize_8" />

        <View
            android:id="@+id/line3"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/grey_line" />

        <TextView
            android:id="@+id/txtBuyNow"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_click_layout"
            android:gravity="center"
            android:text="@string/buy_now"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/textsize_8" />
    </LinearLayout>

</LinearLayout>